<div class="collection-hero">
  {% if collection.image %}
    <img src="{{ collection.image | img_url: width: 1200  | image_tag }}">
  {% else %}
    <img
      src="{{ settings.global_collection_banner | img_url: width: 1200 | image_tag }}"
      alt="Global Collection Banner"
    >
  {% endif %}
</div>

{% schema %}
{
  "name": "Custom Collection Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "global_collection_banner",
      "label": "Global Collection Banner"
    }
  ],
  "presets": [
    {
      "name": "Custom Collection Banner"
    }
  ]
}
{% endschema %}
