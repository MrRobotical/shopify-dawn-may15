<div class="collection-hero">
  {% if collection.image %}
    <img src="{{ collection.image | image_url: width: 1200 }}" alt="{{ collection.title }}">
  {% elsif settings.global_collection_banner %}
    <img
      src="{{ settings.global_collection_banner | image_url: width: 1200 }}"
      alt="Global Collection Banner"
    >
  {% endif %}
</div>

{% schema %}
{
  "name": "Custom Collection Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "global_collection_banner",
      "label": "Global Collection Banner"
    }
  ],
  "presets": [
    {
      "name": "Custom Collection Banner"
    }
  ]
}
{% endschema %}
