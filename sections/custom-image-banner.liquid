{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

{%- if section.settings.image -%}
  {%- style -%}
    .custom-hero-section {
      background-image: url('{{ section.settings.image | img_url: '1200x' }}');
      background-size: cover;
      background-position: center;
      height: 500px; /* Adjustable via settings if needed */
      position: relative;
    }

    .custom-hero-text {
      position: absolute;
      top: {{ section.settings.text_vertical_position_pct }}%;
      left: {{ section.settings.text_horizontal_position_pct }}%;
      transform: translate(-50%, -50%);
      text-align: center;
      color: {{ section.settings.text_color }};
    }

    .custom-hero-heading {
      font-size: {{ section.settings.heading_size }}px;
    }

    .custom-hero-subtitle {
      font-size: {{ section.settings.subtitle_size }}px;
    }
  {%- endstyle -%}
{%- endif -%}

<div class="custom-hero-section">
  <div class="custom-hero-text">
    <h1 class="custom-hero-heading">{{ section.settings.heading }}</h1>
    <p class="custom-hero-subtitle">{{ section.settings.subtitle }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Custom Image Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text",
      "default": "Your Heading Here"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Size (px)",
      "min": 20,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle Text",
      "default": "Your Subtitle Here"
    },
    {
      "type": "range",
      "id": "subtitle_size",
      "label": "Subtitle Size (px)",
      "min": 10,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "text_horizontal_position_pct",
      "label": "Text Horizontal Position (%)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 50
    },
    {
      "type": "range",
      "id": "text_vertical_position_pct",
      "label": "Text Vertical Position (%)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 50
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    {
      "name": "Custom Image Banner",
      "category": "Image banner"
    }
  ]
}
{% endschema %}
