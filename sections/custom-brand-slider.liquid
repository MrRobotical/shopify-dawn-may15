<div class="brand-slider-container">
  {% if section.settings.heading != blank %}
    <h2>{{ section.settings.heading }}</h2>
  {% endif %}
  <div class="brand-slider">
    {% for block in section.blocks %}
      <div class="brand-logo">
        {{ block.settings.image | image_url: width: 75 | image_tag }}
        {{ block.settings.image.alt | escape }}
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .brand-slider-container {
    text-align: center;
    margin: 20px 0;
    {% comment %} overflow: hidden; /* Hide the overflow */ {% endcomment %}
  }

  .brand-slider {
    display: flex;
    animation: slide 20s linear infinite; /* Adjust the timing to control speed */
  }

  @keyframes slide {
    0% {
      transform: translateX(100%); /* Start from the right, outside the view */
    }
    100% {
      transform: translateX(-100%); /* End to the left, outside the view */
    }
  }

  .brand-logo {
    flex: 0 0 auto;
    margin-right: 15px; /* Space between logos */
    padding: 10px;
  }

  .brand-logo img {
    max-width: 100%;
    height: 80px; /* Adjust based on your needs */
    width: auto;
    object-fit: contain;
  }
</style>

{% schema %}
{
  "name": "Custom Brand Slider",
  "class": "brand-slider",
  "settings": [
    {
      "type": "header",
      "content": "Logo Settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Our Partners"
    }
  ],
  "blocks": [
    {
      "type": "image_picker",
      "name": "Image Picker",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Brand Slider"
    }
  ]
}
{% endschema %}
