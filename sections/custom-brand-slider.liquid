<div class="brand-slider-container">
  {% if section.settings.heading != blank %}
    <h2 class="brand-slider-heading">{{ section.settings.heading }}</h2>
  {% endif %}
  <div class="brand-slider-wrapper">
    <div class="brand-slider">
      {% for block in section.blocks %}
        <div class="brand-logo">
          {{ block.settings.image | image_url: width: 75 | image_tag }}
          {{ block.settings.image.alt | escape }}
        </div>
      {% endfor %}
      {% for block in section.blocks %}
        <div class="brand-logo">
          {{ block.settings.image | image_url: width: 75 | image_tag }}
          {{ block.settings.image.alt | escape }}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .brand-slider-container {
    text-align: center;
    margin: 20px 0;
  }

  .brand-slider-heading {
    margin-bottom: 20px; /* Adjust spacing as needed */
  }

  .brand-slider-wrapper {
    overflow: hidden; /* Hide logos outside the view */
    position: relative;
    width: 100%;
  }

  .brand-slider {
    display: flex;
    justify-content: center;
  }

  .brand-logo {
    animation: slide 1s linear infinite;
    wrap: wrap;
  }

  @keyframes slide {
    0% {
      transform: translateX(0%); /* Start at the original position */
    }
    100% {
      transform: translateX(-50%); /* Move to the left by half the width */
    }
  }

  .brand-logo {
    flex: 0 0 auto;
    margin-right: 35px; /* Space between logos */
    padding: 10px;
  }

  .brand-logo img {
    max-width: 100%;
    height: 80px; /* Adjust based on your needs */
    width: auto;
    object-fit: contain;
  }
</style>

{% schema %}
{
  "name": "Custom Brand Slider",
  "class": "brand-slider",
  "settings": [
    {
      "type": "header",
      "content": "Logo Settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Our Partners"
    }
  ],
  "blocks": [
    {
      "type": "image_picker",
      "name": "Image Picker",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Brand Slider"
    }
  ]
}
{% endschema %}
